datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
}

model TelegramUser {
  telegramId           Int               @id
  firstName            String?
  lastName             String?
  rsaId                String?           @unique
  username             String?           @unique
  botSessionId         String            @unique
  channelSessionId     String            @unique
  joinedMellinsChannel Boolean?          @default(false)
  kickedBot            Boolean?          @default(false)
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @default(now())
  UserBotTime          UserBotTime[]
  UserChannelTime      UserChannelTime[]
}

model UserBotTime {
  id           Int          @id @default(autoincrement())
  telegramId   Int
  sessionId    String       @unique
  joinedAt     DateTime     @default(now())
  leftAt       DateTime?
  telegramUser TelegramUser @relation(fields: [telegramId], references: [telegramId])
}

model UserChannelTime {
  id           Int          @id @default(autoincrement())
  telegramId   Int
  sessionId    String       @unique
  joinedAt     DateTime     @default(now())
  leftAt       DateTime?
  telegramUser TelegramUser @relation(fields: [telegramId], references: [telegramId])
}
