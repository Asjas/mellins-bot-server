{
  "include": [
    "server/**/*",
    "ui",
    "bot/src/utils",
    "bot/src/types/telegram.ts",
    "bot/src/plugins/telegram.ts",
    "bot/src/bots",
    "bot/src/cli",
    "bot/src/messages",
    "bot/src/middleware/botMiddleware.ts",
    "bot/src/commands"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ESNEXT"],
    "noEmit": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"]
  }
}
