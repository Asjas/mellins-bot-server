{
  "include": ["server/**/*", "ui"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ESNEXT"],
    "noEmit": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/node"]
  },
  "typesRoots": ["@types", "node_modules/@types"]
}
